  "components": {
    "schemas": {
      "CaseStateDTO": {
        "enum": [
          "invoicing",
          "collection",
          "surveillance"
        ],
        "type": "string",
        "description": "State of a case"
      },
      "RegistrationDTO": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "description": "",
            "format": "date-time",
            "nullable": true
          },
          "userName": {
            "type": "string",
            "description": "",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Object registration"
      },
      "CaseClosureDTO": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
