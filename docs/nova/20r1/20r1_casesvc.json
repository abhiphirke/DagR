          "solicitor",
          "creditor",
          "debtor",
          "pledge",
          "payment",
          "amortisationPlan",
          "partner",
          "document",
          "collateral",
          "collateralAccount",
          "mandate",
          "collector",
          "lawyer",
          "instance",
          "claim",
          "invoice",
          "creditInvoice",
          "fee",
          "debtorCost",
          "history",
          "email",
          "addressUpdate"
